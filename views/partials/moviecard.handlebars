{{#each this}}
<div class="col-md-4 movie-card" data-index={{index}} data-movie-id="{{id}}">
    <div class="card mb-4 shadow-sm">
    <div class="card-img-top d-flex justify-content-center">
        <img src="{{image_url}}" alt="Poster for {{title}}" class="poster">
    </div>
    <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{description}}</p>
        <div class="d-flex justify-content-between align-items-center">
        <small class="text-muted">{{date}}</small>
        </div>
    </div>
    <div class="card-body d-flex justify-content-around border-top">
        {{#if favorites}}
        <button class="btn btn-primary remove-favorites">Remove from Favorites</button>
        {{else}}
        <button class="btn btn-primary mark-watched">Mark as Watched</button>
        <button class="btn btn-primary add-favorites">Add to Favorites</button>
        {{/if}}

    </div>
    </div>
</div>
{{/each}}